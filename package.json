{
    "name": "vscode-cudacpp",
    "displayName": "vscode-cudacpp",
    "author": {
        "name": "Marco Louren√ßo",
        "email": "kriegalex@outlook.com"
    },
    "icon": "images/cudaIcon.png",
    "description": "CUDA C++ language support for Visual Studio Code",
    "version": "0.1.0",
    "publisher": "kriegalex",
    "engines": {
        "vscode": "^1.18.*"
    },
    "categories": [
        "Languages",
        "Snippets"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/kriegalex/vscode-cuda.git"
    },
    "contributes": {
        "languages": [{
            "id": "cuda",
            "aliases": ["CUDA C++", "cuda"],
            "extensions": [".cu",".cuh","h"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "cuda",
            "scopeName": "source.cuda-cpp",
            "path": "./syntaxes/cuda.tmLanguage.json"
        }],
        "snippets": [
            {
                "language": "cuda",
                "path": "./snippets/cuda.json"
            }
        ]
    }
}